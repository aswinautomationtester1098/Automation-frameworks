[
  {
    "testCase": "LoginTest",
    "module": "login",
    "steps": [
      {
        "description": "Navigate to Magento",
        "action": "goto",
        "value": "https://magento.softwaretestingboard.com/"
      },
      {
        "description": "Click on Sign in",
        "action": "click",
        "selector": "(//a[contains(text(),'Sign In')])[1]"
      },
      {
        "description": "Fill Email",
        "action": "inputText",
        "selector": "#email",
        "testDataKey": "username"
      },
      {
        "description": "Fill Password",
        "action": "inputText",
        "selector": "[title*='Password']",
        "testDataKey": "password"
      },
      {
        "description": "Click login button",
        "action": "click",
        "selector": ".primary#send2"
      },
      {
       "description" : "Assert the page title after login",
       "action": "assertTitle",
       "testDataKey": "homepageTitle"
      }
    ]
  }
]
